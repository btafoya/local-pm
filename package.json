{
  "name": "local-pm",
  "version": "1.0.0",
  "description": "Linear-like project management system with Kanban boards",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --port 3010",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "seed": "cross-env NODE_OPTIONS=--no-deprecation node --import tsx src/seeds/seed-runner.ts",
    "reseed": "npm run seed"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@payloadcms/db-mongodb": "^3.68.4",
    "@payloadcms/next": "^3.68.4",
    "@payloadcms/richtext-lexical": "^3.68.4",
    "@payloadcms/ui": "^3.68.4",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "lucide-react": "^0.563.0",
    "next": "^15.4.10",
    "payload": "^3.68.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-quill-new": "^3.7.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
